" VIM
set undodir=$XDG_CACHE_HOME/vimdemo/undo
set directory=$XDG_CACHE_HOME/vimdemo/swap
set backupdir=$XDG_CACHE_HOME/vimdemo/backup
set viminfo+='1000,n$XDG_CACHE_HOME/vimdemo/viminfo
set runtimepath=$XDG_CONFIG_HOME/vimdemo,$XDG_CONFIG_HOME/vimdemo/after,$XDG_DATA_HOME/vimdemo,$VIMRUNTIME

" Nice things
syntax on
inoremap jk <esc>
setlocal nonumber
set backspace=indent,eol,start

" Plugins (note the single quotes)
call plug#begin('$XDG_DATA_HOME/vimdemo/plugged')
Plug 'chriskempson/base16-vim'          "Colorschemes
Plug 'gmarmstrong/rhymer'               "Rhyming assistant
call plug#end()

" base16 settings
if $TERM =~ ".*256color"
    let base16colorspace=256                    "Access 256 colorspace
endif

" Color
colorscheme base16-default-dark
highlight VertSplit ctermbg=lightgrey ctermfg=lightgrey
highlight StatusLine ctermbg=lightgrey ctermfg=lightgrey
highlight StatusLineNC ctermbg=lightgrey ctermfg=lightgrey
